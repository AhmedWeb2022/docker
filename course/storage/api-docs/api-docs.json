        "/dashboard/create_course": {
            "post": {
                "tags": [
                    "Dashboard Course"
                ],
                "summary": "Create a new course",
                "operationId": "d02f0a34903f6f9b1106f2616910f9bf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "translations": {
                                        "description": "Course translations",
                                        "type": "array",
                                        "items": {
                                            "type": "object"
                                        }
                                    },
                                    "parent_id": {
                                        "description": "Parent course ID",
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "organization_id": {
                                        "description": "Organization ID",
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "stage_id": {
                                        "description": "Stage ID",
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "subject_id": {
                                        "description": "Subject ID",
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "type": {
                                        "description": "Course type",
                                        "type": "string",
                                        "example": "online"
                                    },
                                    "status": {
                                        "description": "Course status",
                                        "type": "string",
                                        "enum": [
                                            "active",
                                            "inactive"
                                        ],
                                        "example": "active",
                                        "nullable": true
                                    },
                                    "is_private": {
                                        "description": "Is the course private?",
                                        "type": "boolean",
                                        "example": true,
                                        "nullable": true
                                    },
                                    "has_website": {
                                        "description": "Does the course have a website?",
                                        "type": "boolean",
                                        "example": false,
                                        "nullable": true
                                    },
                                    "has_app": {
                                        "description": "Does the course have an app?",
                                        "type": "boolean",
                                        "example": false,
                                        "nullable": true
                                    },
                                    "start_date": {
                                        "description": "Course start date",
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-01-01"
                                    },
                                    "end_date": {
                                        "description": "Course end date",
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-06-30"
                                    },
                                    "image": {
                                        "description": "Course image URL or file",
                                        "type": "string",
                                        "example": "course.jpg",
                                        "nullable": true
                                    },
                                    "video": {
                                        "description": "Video details",
                                        "properties": {
                                            "is_file": {
                                                "description": "Is the video a file? (1 = yes, 0 = no)",
                                                "type": "integer",
                                                "enum": [
                                                    0,
                                                    1
                                                ],
                                                "example": 1,
                                                "nullable": true
                                            },
                                            "video_type": {
                                                "description": "Type of video",
                                                "type": "string",
                                                "example": "mp4"
                                            },
                                            "file": {
                                                "description": "Video file (required if is_file = 1)",
                                                "type": "string",
                                                "example": "video.mp4"
                                            },
                                            "link": {
                                                "description": "Video link (required if is_file = 0)",
                                                "type": "string",
                                                "example": "https://example.com/video"
                                            }
                                        },
                                        "type": "object",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Course created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input or validation error"
                    }
                }
            }
        },
